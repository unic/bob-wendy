<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <!--
        Settings for the local dev environment:
        WebsiteCodeName:    Identifier for the IIS site and the folder under
                            <GlobalWebPath/> where site will be deployed
                            locally.
        LocalHostName:      Hostname which will be configured in IIS and added
                            to the hosts file.
        GlobalWebPath:      Path to the directory where all your Sitecore IIS
                            sites should be deployed.
    -->
  <WebsiteCodeName>post-internet</WebsiteCodeName>

  <LocalHostName>local.post.ch</LocalHostName>
  <WebFolderName>Web</WebFolderName>
  <BackupFolderName>Backup</BackupFolderName>
  <GlobalWebPath>d:\web</GlobalWebPath>
  <AppPoolRuntime>v4.0</AppPoolRuntime>
  <Protocol>http</Protocol>
  <HostsFileComment>generated by Bob Open Build and his Can Do Crew</HostsFileComment>

  <!--
        Settings for item serialization:

    -->

  <SerializationReferenceTemplate>
    <![CDATA[
		<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
		  <sitecore>
			<settings>
				<setting name="SerializationFolder" set:value="" />
			</settings>
		  </sitecore>
		</configuration>
		]]>
  </SerializationReferenceTemplate>
  <SerializationReferenceXPath>configuration/sitecore/settings/setting/@set:value</SerializationReferenceXPath>
  <SerializationFolder>Serialization</SerializationFolder>
  <SerializationReferenceFilePath>App_Config\Include\Unic.SerializationReference.config</SerializationReferenceFilePath>

  <!--
        Settings for database managent:
        DatabaseBackupShare:    Known values at unic are \\z1875\pinchi$ and
                                and \\corp.unic.com\sys\backup\unic-dev-mssql2

    -->
  <DatabaseServer>localhost</DatabaseServer>
  <ConnectionStringsFolder>App_Config\ConnectionStrings.config</ConnectionStringsFolder>
  <DatabaseBackupShare>\\corp.unic.com\sys\backup\unic-dev-mssql2</DatabaseBackupShare>

  <KeepAppConfigIncludes>
    *_base;
    *_hardening;
    *_$Environment;
    *_$Role;
    *_$Environment.$Role
  </KeepAppConfigIncludes>
<!--  <BennyFilter>
    *.cshtml;
    App_Config\*.config
  </BennyFilter>-->
  <UnamangedFilter>
    App_Config\ConnectionStrings.config;
    App_Config\Unmanaged\*
  </UnamangedFilter>
</Configuration>
